<div data-role="header">
    <h1>ZARRP</h1>
</div>

<div data-role="content">
    <div data-role="fieldcontain">
        <select class="select-button" data-mini="true">
            <option value="all">All Cities</option>
            <%= @cities.each do |city| %>
                <option value="<%= city %>"><%= city %></option>
            <% end %>
        </select>
    </div>

    <ul data-role="listview" data-divider-theme="b" id="events_list">
        <%= render 'events' %>
    </ul>
    <% if @events.total_pages > @events.current_page %>
        <div data-role="fieldcontain" class="more-button">
            <button id="button_more" data-theme="a">MORE</button>
        </div>
    <% end %>
</div>
<script>
    var access_token = "<%= CGI.escape @access_token %>",
        addon_token = "<%= CGI.escape @addon_token %>";
</script>