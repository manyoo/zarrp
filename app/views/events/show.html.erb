<div data-role="header">
    <h1>ZARRP</h1>
    <a data-role="button" href="<%= root_path %>" data-icon="arrow-l" data-iconpos="left"
    class="ui-btn-left">
        Back
    </a>
</div><!-- /header -->

<%= image_tag @event.image.url, :class => "event-big" %>

<div data-role="content">
    <div class="name-row">
        <h2 class="event-name"><%= @event.name %></h2>
        <div class="share-button-list">
            <% if !@current_user.registered?(@event.id) %>
                <%= link_to "I'M IN", register_event_path(@event), :format => "js", :method => :post, :class => "share-buttons check-button", :remote => true %>
            <% end %>
            <a href="http://www.facebook.com/share.php?u=<%= event_url(@event) %>" class="share-buttons"><%= image_tag 'FacebookButton.png' %></a>
            <a href="https://twitter.com/share?url=<%= event_url(@event) %>" class="share-buttons"><%= image_tag "TwitterButton.png" %></a>
        </div>
    </div>
    <h4><%= @event.short_desc %></h4>
    <div class="time-club">
        <%= "#{@event.time} #{@event.club}" %>
    </div>
    <p><%= @event.desc %></p>
    <p>
        <div class="club"><%= @event.club %></div>
        <div class="Address"><%= @event.address %></div>
    </p>
    <p>
        <a href="tel:<%= @event.phone %>" class="phone"><%= @event.phone %></a><br />
        <a href="mailto:<%= @event.email %>" class="email"><%= @event.email %></a>
    </p>
</div>
